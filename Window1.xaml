<Window x:Class="PasteWithFormatting.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="569" Width="523">
    <Grid>
        <Button Content="Paste" Height="34" HorizontalAlignment="Left" Margin="329,224,0,0" Name="ApplyFormatting" VerticalAlignment="Top" Width="160" Click="ApplyFormattingClick" />
        <TextBox TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" Height="179" HorizontalAlignment="Left" Margin="12,39,0,0" Name="Formatting" VerticalAlignment="Top" Width="477" TextChanged="textBox1_TextChanged" />
        <Button Content="Paste without formatting" Height="34" HorizontalAlignment="Left" Margin="12,224,0,0" Name="button1" VerticalAlignment="Top" Width="160" Click="button1_Click" />
        <TextBlock Height="232" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="12,298,0,0" Name="Preview" Text="" VerticalAlignment="Top" Width="477" />
        <Label Content="Preview" Height="28" HorizontalAlignment="Left" Margin="12,264,0,0" Name="label1" VerticalAlignment="Top" Width="88" />
        <Label Content="Formatting (Use String.Format syntax)" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label2" VerticalAlignment="Top" Width="210" />
    </Grid>
</Window>
